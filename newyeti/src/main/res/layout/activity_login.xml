<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@drawable/border_radius_top"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-27dp"
            tools:layout_editor_absoluteY="226dp"
            android:paddingTop="60dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Xin chào!"
                android:textSize="36sp"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng đăng nhập để tiếp tục."
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="60dp"/>

            <EditText
                android:id="@+id/emailLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:hint="Nhập email"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                />

            <EditText
                android:id="@+id/passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:hint="Nhập mật khẩu"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/textForgotPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:textColor="@color/text_blue"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/text_blue"
                android:text="Đăng nhập"
                android:fontFamily="@font/poppins_bold"
                app:cornerRadius="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không phải thành viên?"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />

                <TextView
                    android:id="@+id/textForwardRegis"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Đăng ký ngay"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>