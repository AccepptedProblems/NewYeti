<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-27dp"
        tools:layout_editor_absoluteY="226dp"
        android:paddingTop="40dp"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="30dp"
            android:fontFamily="@font/poppins_bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo một tài khoản để bắt đầu."
            android:textSize="16dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"/>

        <EditText
            android:id="@+id/nameRegis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:hint="Nhập tên của bạn"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập email"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"/>

        <EditText
            android:id="@+id/emailRegis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textSize="16dp"
            android:inputType="text"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:hint="name@email.com"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/textPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"/>

        <EditText
            android:id="@+id/passwordRegis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:hint="Nhập mật khẩu"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/rePasswordRegis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:hint="Nhập lại mật khẩu"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/textGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/radio_a"
                android:text="Nam"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_regular"
                />

            <RadioButton
                android:id="@+id/radio_b"
                android:text="Nữ"
                android:checked="true"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"/>

        <EditText
            android:id="@+id/birthRegis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textSize="16dp"
            android:inputType="datetime"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:hint="Nhập ngày sinh"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/text_blue"
            android:text="Đăng ký"
            android:fontFamily="@font/poppins_regular"
            app:cornerRadius="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Bạn đã có tài khoản?"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textForwardLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Đăng nhập"
                android:textColor="@color/text_blue"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>