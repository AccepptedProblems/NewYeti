<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@color/bg_color"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Nhắn tin"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center">

            <EditText
                android:id="@+id/search"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:inputType="text"
                android:drawableStart="@drawable/search_icon"
                android:hint="  Tìm kiếm"
                android:background="@drawable/custom_search"
                android:paddingStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listChatView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/chat_item"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center">


            <Button
                android:id="@+id/listChats"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:padding="0dp"
                android:drawableTop="@drawable/chat_icon_focus"
                android:backgroundTint="@color/white"
                android:text="Nhắn tin"
                android:textColor="@color/black"
                android:layout_marginEnd="50dp"/>

            <Button
                android:id="@+id/listFriends"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:padding="0dp"
                android:drawableTop="@drawable/person_icon"
                android:backgroundTint="@color/white"
                android:text="Bạn bè"
                android:textColor="@color/bg_icon"
                android:layout_marginEnd="50dp"/>

            <Button
                android:id="@+id/setting"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:padding="0dp"
                android:drawableTop="@drawable/setting_icon"
                android:backgroundTint="@color/white"
                android:text="Cài đặt"
                android:textColor="@color/bg_icon"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>